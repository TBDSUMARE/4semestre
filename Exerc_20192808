   leia(n1)
   
   escreval("Digite o segundo número: ")
   leia(n2)
   
   escreval("")
   escreval("A soma dos números é ", n1 + n2)
   escreval("A diferença dos números é ", n1 - n2)
   escreval("O produto dos números é ", n1 * n2)
   escreval("A divisão dos números é ", n1 / n2)

